{%  extends 'base.html.twig' %}
{%  block body %}
    <div class="row">
            <table class="table">
                <thead>
                    <th>Font</th>
                    <th>Author</th>
                    <th>Size</th>
                    <th>Action</th>
                </thead>
                <tbody>
                    {% for font in fonts %}
                        <tr>
                            <td>{{ font.getName }}</td>
                            <td>{{ font.getAuthor }}</td>
                            <td>{{ font.getSize }}</td>
                            <td><a href="{{ path("edit_item", {'id': font.getId}) }}">Edit...</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
    </div>
{%  endblock %}